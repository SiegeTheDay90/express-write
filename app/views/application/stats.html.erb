<main class="pt-2">
  <div class="d-flex justify-content-between col-lg-8 col-sm-10">
    <div>
      <span class="fw-bold">üìù Letters Generated:</span> <%= TempLetter.count %> <br>
      <span class="fw-bold">üîÑ AJAX Requests this week:</span> <%= requests_this_week.count %> <br>
      <span class="fw-bold">‚åõ Avg Request Time this Week:</span> <%= (avg = Request.average_uptime).is_a?(Numeric) ? "#{avg.round(3)} seconds" : avg %> <br>
      <% if (a = days_since_last_error) > 4 %>
        <span class="fw-bold">‚ö†Ô∏è Days since a failed request:</span> <%= a %> 
      <% end %>
    </div>

    <div>
      OpenAI API<br>
      Ruby on Rails 7<br>
      React 18 (Resume Builder)<br>
      Webpack 5<br>
      Bootstrap 5<br>
      FontAwesome<br>
      Google Firebase<br>
    </div>

  </div>
  <hr>
  <div>
    <script>
      function chartTypeChange(e){
        const chartClass = e.target.dataset.category;
        const visibleChart = document.querySelector(`.${chartClass}:not(.d-none)`);
        const targetChart = document.getElementById(e.target.value);
        targetChart.classList.remove('d-none');
        visibleChart.classList.add('d-none');
      }
    </script>
    <div>
      <h6>Chart Type</h6>
      <label>Weekly
        <input class="me-3" type="radio" name="chartType" data-category="hitChart" value="weeklyHitChart" onChange="chartTypeChange(event)" checked />
      </label>
      <label>Daily
        <input class="me-3" type="radio" name="chartType" data-category="hitChart" value="dailyHitChart" onChange="chartTypeChange(event)" />
      </label>
    </div>
  </div>
  <div class="d-lg-flex col-sm-9 col-md-8 col-lg-6">
    <canvas id="dailyHitChart" class="hitChart d-none"></canvas>
    <canvas id="weeklyHitChart" class="hitChart"></canvas>
  </div>
</main>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script defer>
  const ctx = document.getElementById('dailyHitChart');
  const ctx2 = document.getElementById('weeklyHitChart');

  new Chart(ctx, {
    type: 'bar',
    data: {
      labels: [
        <% @labels.each do |label| %>
            "<%= label %>",
        <% end %>
      ]
      ,
      datasets: [{
        label: 'Splash Page Loads',
        data: <%= @values %>,
        borderWidth: 3
      }]
    },
  });

  new Chart(ctx2, {
    type: 'line',
    data: {
      labels: [
        <% @weekly_labels.each do |label| %>
            "<%= label %>",
        <% end %>
      ]
      ,
      datasets: [{
        label: 'Weekly Page Loads',
        data: <%= @weekly_values %>,
        borderWidth: 3
      }]
    },
  });
</script>

